{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "styles/**", "use": "@vercel/static" },
    { "src": "js/**", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 10,
      "runtime": "nodejs22.x"
    },
    "api/status.js": {
      "maxDuration": 10,
      "runtime": "nodejs22.x"
    },
    "api/resume-analyze.js": {
      "maxDuration": 60,
      "runtime": "nodejs22.x"
    },
    "api/interview-analyze.js": {
      "maxDuration": 60,
      "runtime": "nodejs22.x"
    }
  }
}